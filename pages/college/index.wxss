@import "/icon.wxss";
@import "/base-rpx.wxss";
page{
  background-color: #fff
}
.sort-list{
  text-align: center;
  color:#cacaca;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
}
.sort-list .active{
  color:#000000;
}
.icon_sort{
	width: 16rpx;
	height: 22rpx;
}
.more-icon{
	width: 14rpx;
	height: 24rpx;
}
.list{
  margin:10rpx;
  width: calc(50% - 20rpx);
  position: relative;
}
.list>image{
  height: 240rpx;
}
.list .num{
  position: absolute;
  top:200rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(0,0,0,.6);
  color:#fff;
  text-align: center;
}
.title{
  text-overflow:ellipsis;
  overflow:hidden;
  width: 100%
}
/* 父级 */
page{
  background-color: #f5f5f5;
}
 
/* 外层视图 */
.cont{ 
  width: 100%; 
  margin: 0 auto; 
} 
 
.list{ 
  position: relative; 
  height: 150rpx; 
  line-height: 150rpx; 
  overflow: hidden; 
} 
/* 删除外层包裹视图 */
.list_del{ 
  position: absolute; 
  top:0; 
} 
.list_del.txt{ 
  position: relative;
  background-color: #fff; 
  width: 100%; 
  z-index: 5; 
  padding:0 10rpx; 
  transition: left 0.2s ease-in-out; 
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis; 
} 
/* 删除 */
.list_del.del{ 
  background-color: #e64340; 
  width: 180rpx;text-align: center; 
  z-index: 4; 
  right: 0; 
  color: #fff 
} 
/* 列表图片 */
.list_img{ 
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
  margin-top: -8rpx;
} 

 /* 列表名称 */
.list_name{
  position: absolute;
  left:60rpx;
}
/* 活动时间 */
.list_datas{
   position: absolute;
  left:20rpx;
  top:45rpx; 
  font-size: 13px;
  color: #818181;
}
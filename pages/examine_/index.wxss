/**index.wxss**/
@import "/icon.wxss";
@import "/base-rpx.wxss";
page{
  background-color: #f4f4f4;
  text-align: center;
}
.bg-white{
	background-color:#fff;
}
.status-wrap{
	border-top: 1px solid #f4f4f4;
	height: 90rpx;
	line-height: 90rpx;
}
.status-wrap>view .line{
	display: block;
	margin:-6rpx auto 0;
	width: 60rpx;
	height: 6rpx;
	background-color: #fff;
}
.status-wrap>view.active .line{
	background-color:#fccf11;	
}
.item{
	background-color: #fff;
	width: 100%;
	height: 240rpx;
	border-radius: 10rpx;
}
.shopimg{
	width: 110rpx;
	height: 110rpx;
	border-radius: 110rpx;
	margin-right: 30rpx;
}
.add-icon,.more-icon{
	width: 18rpx;
	height: 20rpx;
}